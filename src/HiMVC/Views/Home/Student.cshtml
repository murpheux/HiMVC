@model HiMVC.ViewModels.Domain.StudentModel

@{
    ViewData["Title"] = "Student";
}

<h2>Student</h2>

<form asp-action="Student">
    <div class="form-horizontal" ng-app="">
        <h4>Student</h4>
        <hr />
        <h1>Hello {{name}}</h1>
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="NewName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="NewName" class="form-control" placeholder="Enter name here" ng-model="name" />
                <span asp-validation-for="NewName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Age" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Age" class="form-control" placeholder="Enter age here" />
                <span asp-validation-for="Age" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Sex" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Sex" class="form-control" placeholder="Enter sex here" />
                <span asp-validation-for="Sex" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<div ng-app="myApp" ng-controller="myCtrl">
    {{ firstName + " " + lastName }}
</div>

<script>
    $(document).ready(function(){
        $("p").click(function(){
            $(this).hide();
        });
    });

    var app = angular.module("myApp", []);
    app.controller("myCtrl", function ($scope) {
        $scope.firstName = "John";
        $scope.lastName = "Doe";
    });

</script>

<p>If you click on me, I will disappear.</p>
<p>Click me away!</p>
<p>Click me too!</p>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
