@model HiMVC.ViewModels.Domain.StudentModel
@using HiMVC.ViewModels.Domain

@{
    ViewData["Title"] = "Student";
}

<h2>Student</h2>

<form asp-action="Student">
    <div class="form-horizontal" ng-app="">
        <h4>Student</h4>
        <hr />
        <h1>Welcome {{name}}</h1>
        <h1>@ViewBag.StatusMessage</h1>
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="NewName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="NewName" class="form-control" placeholder="Enter name here" ng-model="name" />
                <span asp-validation-for="NewName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Age" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Age" class="form-control" placeholder="Enter age here" />
                <span asp-validation-for="Age" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="YearOfBirth" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="YearOfBirth" class="form-control" placeholder="Enter year of birth here" />
                <span asp-validation-for="YearOfBirth" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Sex" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Sex" class="form-control" placeholder="Enter sex here" />
                <span asp-validation-for="Sex" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Email" class="form-control" placeholder="Enter email here" />
                <span asp-validation-for="Email" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmEmail" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ConfirmEmail" class="form-control" placeholder="Enter email confirmation here" />
                <span asp-validation-for="ConfirmEmail" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            @{ 
                var country = ViewBag.Country;
            }
            <label asp-for="@country" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="@country" asp-items="Html.GetEnumSelectList<CountryEnum>()"></select> 
            </div>
        </div>
        <div class="form-group">
            <email mail-to="support" />
            <div class="col-md-10">
                <p bold>Use this area to provide additional information.</p>
                <bold> Is this bold?</bold>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="StudentList">Back to List</a>
</div>



@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

