@model HiMVC.ViewModels.Domain.StudentModel

@{
    ViewData["Title"] = "EditStudent";
}

<h2>EditStudent</h2>

<form asp-action="UpdateStudent">
    <div class="form-horizontal">
        <h4>StudentModel</h4>
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="StudentId" />
        <div class="form-group">
            <label asp-for="Age" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="NewName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="NewName" class="form-control" />
                <span asp-validation-for="NewName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Sex" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Sex" class="form-control" />
                <span asp-validation-for="Sex" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="StudentList">Back to List</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
